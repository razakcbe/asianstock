	<changeSet id="removalOfColumn" author="abdulrazak">
		<dropColumn tableName="category_type" columnName="non_vat_amount" />
		<dropColumn tableName="category_type" columnName="vat_amount" />
		<addColumn tableName="category_type">
			<column name="vatpercentage" type="varchar(255)" />
		</addColumn>
		<addColumn tableName="category_type_aud">
			<column name="vatpercentage" type="varchar(255)" />
		</addColumn>
	</changeSet>
	<changeSet id="updateVat" author="abdulrazak">
		<sql>
		<![CDATA[
		update category_type set vatpercentage = '14.5';
		]]>
		</sql>
	</changeSet>
	<changeSet id="updatePrice" author="abdulrazak">
		<sql>
		<![CDATA[
		update category_type set price = 1200;
		]]>
