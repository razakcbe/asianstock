	</changeSet>
	<changeSet id="ImageURL" author="akabdulrazak">
		<addColumn tableName="category_type">
			<column name="imageurl" type="varchar"></column>
		</addColumn>
		<addColumn tableName="category_type_aud">
			<column name="imageurl" type="varchar"></column>
		</addColumn>
		<sql>
		<![CDATA[
		update category_type set imageurl = 'https://s3-ap-southeast-1.amazonaws.com/civil247-gallery/2647d62a3f104a41a98254ba8abd0f3f';
		]]>
		</sql>
	</changeSet>
	<changeSet id="addlastupdatetime" author="abdulrazak">
